# Pontus Vault contracts env template (contracts/.env)
# Usage:
#   cd contracts
#   cp .env.example .env

###############################################################################
# 1) Shared Across Scripts/Tests (fill for all contract workflows)
###############################################################################
PHAROS_ATLANTIC_RPC_URL=

# Optional: pin fork tests to a deterministic block.
# If unset, scripts default to 12950000.
PHAROS_ATLANTIC_FORK_BLOCK_NUMBER=

###############################################################################
# 2) Deploy Script Specific: script/DeployInfra.s.sol
# Required: PRIVATE_KEY
# Optional: OWNER (defaults to vm.addr(PRIVATE_KEY))
###############################################################################
PRIVATE_KEY=0x
OWNER=0x

###############################################################################
# 2) Deploy Script Specific: script/DeployTrancheVault.s.sol
# Required: TRANCHE_FACTORY, ASSET
# Required via script guards: STRATEGIST, MANAGER_ADMIN
# Optional: OPERATOR, GUARDIAN, BALANCER_VAULT and params below
###############################################################################
OPERATOR=0x
GUARDIAN=0x
STRATEGIST=0x
MANAGER_ADMIN=0x

# DeployTrancheVault.s.sol inputs
TRANCHE_FACTORY=0x
ASSET=0x
BALANCER_VAULT=0x
SENIOR_RATE_PER_SECOND_WAD=0
MAX_SENIOR_RATIO_BPS=8000
SENIOR_TOKEN_NAME=Pontus Vault Senior
SENIOR_TOKEN_SYMBOL=ptS
JUNIOR_TOKEN_NAME=Pontus Vault Junior
JUNIOR_TOKEN_SYMBOL=ptJ
BORING_VAULT_NAME=Pontus Vault Base
BORING_VAULT_SYMBOL=PTVB
BORING_VAULT_DECIMALS=18
ACCOUNTANT_SHARE_PRICE=1000000
ACCOUNTANT_UPPER_BOUND_BPS=11000
ACCOUNTANT_LOWER_BOUND_BPS=9000

###############################################################################
# 2) Fork Test Specific (optional overrides for manager fork suite)
###############################################################################
OPENFI_MANAGER_POOL=0x
OPENFI_MANAGER_FORK_AMOUNT=1000000000
RUN_ASSETO_MANAGER_FORK=false
ASSETO_MANAGER_PRODUCT=0x
ASSETO_MANAGER_ASSET=0x
ASSETO_MANAGER_FORK_AMOUNT=1000000000
