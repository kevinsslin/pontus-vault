{
  "name": "pontus-vault",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "keeper:start": "pnpm --filter @pti/keeper start",
    "keeper:once": "pnpm --filter @pti/keeper start:once",
    "deploy": "turbo run deploy --filter=@pti/contracts",
    "indexer:deploy": "turbo run deploy --filter=@pti/indexer"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "turbo": "2.8.1"
  }
}
